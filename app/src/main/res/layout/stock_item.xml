<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardBackGround"
    android:elevation="3dp"
>


    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/roundedImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:src="@color/white"
            app:riv_border_color="@color/purple_700"
            app:riv_border_width="0dp"
            app:riv_corner_radius="5dp" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:maxLines="1"
                android:layout_marginStart="20dp"
            android:id="@+id/company_name"
            android:layout_width="0dp"
                android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Adani Enter"
                android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:textSize="15sp"
             />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/stock_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="1443"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#65DA6A"
            android:textSize="13sp"
            />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
<RadioGroup
    android:id="@+id/radioGroup"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="start"
    android:orientation="horizontal">


        <RadioButton
            android:layout_marginStart="10dp"
            android:id="@+id/buyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:fontFamily="@font/poppins_semibold"
            android:buttonTint="@color/holo_green_dark"
          />

    <RadioButton
        android:layout_marginStart="20dp"
        android:id="@+id/sellButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sell"
        android:fontFamily="@font/poppins_semibold"
        android:buttonTint="@color/red"
        />
</RadioGroup>
        <ImageView
            android:visibility="gone"
            android:id="@+id/down_arrow_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/down_arrow" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/up_arrow_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/up_arrow" />



        <TextView
            android:id="@+id/up_down_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="- 0.24%"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#FF0A0A"
            android:textSize="13sp"
            />
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

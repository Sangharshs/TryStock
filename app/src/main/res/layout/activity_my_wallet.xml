<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MyWalletActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/goBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Wallet"
                    android:textSize="23sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/purple_500"/>

                <TextView
                    android:visibility="gone"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join Contest Now"
                    android:textSize="15sp"
                    android:fontFamily="@font/ggh"
                    android:textColor="@color/c3"/>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>


    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/rounded_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:tint="@color/purple_500"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/wallet_"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount Added"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/WALLET_AMOUNT"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹  0"
                android:textColor="@color/purple_500"
                android:layout_gravity="center"
                android:textSize="14sp"/>

        </LinearLayout>


        <Button
            android:background="@drawable/rounded_border"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/add_amount"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Add"/>
    </LinearLayout>


    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/rounded_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:tint="@color/purple_500"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/wallet_"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Winnings"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/WINNING_AMOUNT"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹  0"
                android:textColor="@color/purple_500"
                android:layout_gravity="center"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Bank details verification is required to withdraw"
                android:textColor="@color/purple_500"
                android:layout_gravity="center"
                android:textSize="12sp"/>

        </LinearLayout>


        <Button

            android:background="@drawable/rounded_border"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/verifyAccountBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Verify"/>

    </LinearLayout>


    <LinearLayout

        android:layout_margin="10dp"
        android:background="@drawable/rounded_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:tint="@color/purple_500"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/wallet_"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bonus"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/BONUS_AMOUNT"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹  0"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/purple_500"
                android:layout_gravity="center"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>